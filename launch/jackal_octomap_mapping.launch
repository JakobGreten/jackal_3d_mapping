<!-- Launches the octomap server for the creation of the octomap -->
<launch>
	<node pkg="octomap_server" type="octomap_server_node" name="octomap_server">

		<!-- Resolution of the created octomap -->
		<param name="resolution" value="0.09" />

		<!--Map frame provided by the SLAM tool-->
		<param name="frame_id" type="string" value="map" />

		<!-- maximum range of points to integrate into octomap. Set to -1 to have unlimited range-->
		<param name="sensor_model/max_range" value="10.0" />

		<!-- Coloring of the octomap based on height -->
		<param name="height_map" type="bool" value="true" />

		<!-- Coloring of the octomap based on color provided by point cloud -->
		<param name="colored_map" type="bool" value="false" />
		
		<!-- Input point cloud topic -->
		<remap from="cloud_in" to="/points" />

		<!-- Activation/ deactivation of the ground filter -->
		<param name="filter_ground" value="false" />
		
		<!-- Parameters to configure the ground filter. Not used at the moment-->
		<param name="ground_filter/angle" value="0.15" />
		<param name="ground_filter/distance" value="1.0" />
		<param name="ground_filter/plane_distance" value="0.07" />

		<!-- Base frame of the robot -->
		<param name="base_frame_id" value="base_link" />


	</node>
</launch>
